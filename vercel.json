{
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static",
      "config": {
        "distDir": "."
      }
    },
    {
      "src": "config.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/config.js",
      "dest": "/config.js"
    }
  ],
  "env": {
    "TWITCH_CLIENT_ID": "@twitch-client-id",
    "TWITCH_REDIRECT_URI": "@twitch-redirect-uri"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "script-src 'self' 'unsafe-eval' 'unsafe-inline'; connect-src 'self' https://id.twitch.tv https://api.twitch.tv;"
        }
      ]
    }
  ]
}
